{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "ng serve",
      "type": "chrome",
      "request": "launch",
      "preLaunchTask": "npm: start",
      "url": "http://localhost:4200/",
      "runtimeArgs": [
        "--no-default-browser-check",
        "--disable-logging",
        "--disable-extensions",
        "--user-data-dir=${workspaceFolder}/.vscode/chrome"
      ]
    },
    {
      "name": "ng test",
      "type": "chrome",
      "request": "launch",
      "preLaunchTask": "npm: test",
      "url": "http://localhost:9876/debug.html",
      "runtimeArgs": [
        "--no-default-browser-check",
        "--disable-logging",
        "--disable-extensions",
        "--user-data-dir=${workspaceFolder}/.vscode/chrome-test"
      ]
    }
  ]
}
